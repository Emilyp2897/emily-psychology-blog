---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/">
			<img src="/MindtheGaelLogo1.jpg" alt="Mind the Gael logo" />
		</a>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<div class="blog-dropdown">
				<HeaderLink href="/blog">Blog</HeaderLink>
				<div class="dropdown-menu">
					<HeaderLink href="/tracks/applied-psychology">Applied Psychology</HeaderLink>
					<HeaderLink href="/tracks/sports-psychology">Sports Psychology</HeaderLink>
					<HeaderLink href="/tracks/mental-health">Mental Health</HeaderLink>
				</div>
			</div>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact Us</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background-color: #f4ffe8;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav img {
		height: 60px;
		width: auto;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0;
	}

	nav a {
		padding: 1em 0.5em;
		color: #030a06;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: #c0fe71;
	}

	nav a:hover {
		color: #69005a
		;
	}

	.blog-dropdown {
		position: relative;
		display: inline-block;
	}

	.dropdown-menu {
		display: none;
		position: absolute;
		background-color: #f4ffe8;
		min-width: 200px;
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
		z-index: 1;
		top: 100%;
		left: 0;
		border-top: 2px solid #c0fe71;
	}

	.blog-dropdown:hover .dropdown-menu {
		display: block;
	}

	.dropdown-menu a {
		display: block;
		padding: 0.75em 1em;
		border-bottom: none;
		color: #030a06;
	}

	.dropdown-menu a:hover {
		background-color: #69005a;
		color: #f0cdff;
	}

	@media (max-width: 720px) {
		.nav-links {
			flex-wrap: wrap;
		}
	}
</style>
